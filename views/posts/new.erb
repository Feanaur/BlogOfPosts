<div class="center">
  <h1>New Post</h1>

  <form class="form-horizontal" action="/posts/new" method="post">
    <div class="col-lg-10">

      <div class="control-group">
        <label for="post_title">Title:</label><br />
        <input id="post_title" name="post[title]" class="form-control" type="text" value="<%= @post.title %>" />
      </div>

      <div class="control-group">
        <label for="post_body">Body:</label><br />
        <textarea class="form-control xxlarge" id="post_body" name="post[body]" rows="8"><%= @post.body %></textarea>
      </div>

      <div class="control-group">
        <br/>
        <input class="btn btn-success btn-lg" type="submit" value="Create Post" />
      </div>
      
    </div>
  </form>
</div> 