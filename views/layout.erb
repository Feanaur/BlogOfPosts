<html>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/bootstrap-theme.css">
  <link rel="stylesheet" href="/css/app.css">
  <script src="/js/bootstrap.js"></script>
  <head>
    <title>My First Blog</title>
  </head>
  <body>
    <nav class="navbar-default navbar-static-top" role="navigation">
      <ul class="nav nav-tabs">
        <li><a href="/">Home</a></li>  
        <% if is_user_logged_on? %>  
          <li><a href="/about_me">About Me</a></li>        
          <li><a href="/posts/new">New Post</a></li>
          <li class="pull-right"><a href="/auth/logout">Sign out</a></li>
          <% if post_show_page? && @post.user_id==session[:user].id  %>
            <li><a href="/posts/<%= @post.id %>/edit">Edit Post</a></li>
          <% end %>    
        <% else %>
          <li class="pull-right"><a href="/auth/login">Sign in</a></li>   
          <li class="pull-right"><a href="/register">RÐµgister</a></li>
        <% end %>              
      </ul>
    </nav>

    <div class="container"> 
      <%= yield %>
    </div>
  </body>
</html>